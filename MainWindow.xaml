<Window x:Class="cfx_cleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cfx_cleaner"
        mc:Ignorable="d"
        Title="CFX Cache Cleaner" Height="200" Width="350">
    <Grid Background="Black">
        <TextBlock x:Name="TitleText" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="CFX Cache Cleaner (FiveM/RedM)" VerticalAlignment="Top" Foreground="White" Background="Black" Height="31" Width="308" FontSize="20" Grid.ColumnSpan="2"/>
        <Button x:Name="FiveM_Button" Content="Clean FiveM Cache" HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Height="55" Width="125" FontSize="14" Click="FiveM_Button_Click"/>
        <Button x:Name="RedM_Button" Content="Clean RedM Cache" HorizontalAlignment="Left" Margin="190,62,0,0" VerticalAlignment="Top" Height="55" Width="125" FontSize="14" Click="RedM_Button_Click"/>
    </Grid>
</Window>
